<script>
    $.ajax({
        url: 'showRoadList',
        type: 'POST',
        success: function (data) {
            const result = JSON.parse(data);
            addSelectOption(result);
        }
    })

    // 셀렉트박스 리스트 아이템 붙이기
    function addSelectOption(data) {
        const selectItem = document.getElementById('roadList');
        for(var i=0; i < data.length; i++) {
            console.log(data[i]);
            var optionItem = document.createElement('option');
            optionItem.innerHTML = data[i].road_nm;
            optionItem.value = data[i].road_nm;
            selectItem.appendChild(optionItem);
        }
    }
</script>

<script>
    var road_nm = $('#roadList option:selected').val();
    window.onload = ajaxFunc('전체');

    // 서버에서 메뉴 정보 가져오기
    $('#roadList').change(function() {
        var road_nm = $('#roadList option:selected').val();
        console.log('selected:',road_nm);
        clearTable();
        ajaxFunc(road_nm);
    })

    // ajax 통신 부분
    function ajaxFunc(road_nm) {
        $.ajax({
            url: '/showAllRestareaList',
            type: 'POST',
            data: {
                road_nm: road_nm
            },
            success: function (data) {
                // console.log(data);
                var result = JSON.parse(data);
                // console.log(result);
                drawAreaList(result);
            }   
        });
    }

    //API 가져와서 카드에 메뉴넣는 함수
    function drawAreaList(data) {
      var html = '';
      $.each(data, function (key, value) {
        html += `
            <div class='panel panel-default'>
                <div class='panel-body'>
                    <div style='padding-left:20px;'><h4>${value.area_nm}</h4>
                        <p class='card-text' id=cost>${value.road_nm}</p>
                    </div><br>
                <div class='container'>
                    <div class='row'>
                      <button id='btnDetail' onClick="location.href='/restAreaInfo?area_code=${value.area_code}'" class='btn btn-primary'>상세정보</button>
                    </div>
                </div>
            </div>
            <br>
        `;
      });
      $("#display").empty();
      $("#display").append(html);
    }

    // 조회조건이 변경되면 테이블 밀어야함
    function clearTable() {
        const oldChild = document.getElementById('display');
        // 기존 테이블 내용 삭제
        while ( oldChild.hasChildNodes() ) { 
            oldChild.removeChild( oldChild.firstChild );
        }
    }


</script>